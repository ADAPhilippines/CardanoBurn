@page "/"

<PageTitle>CARDANO | Burn your $ADA</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
  <MudPaper Class="mx-auto pa-4 ma-2 mt-6" Elevation="3">
    <div style="text-align: center;">
      <MudText Typo="Typo.h1">Welcome to CardanoBurn</MudText>
      <MudText Typo="Typo.h3">🔥🔥🔥</MudText>
    </div>
    <div style="text-align: center;" class="mt-12">
      <MudText Typo="Typo.h4">
        <span>Total Burned:</span>
        <span style="color: #83e35b;">0 $ADA</span>
        <span>/</span>
        <span style="color: #ff6f6f;">45,000,000,000 $ADA</span>
      </MudText>
    </div>
    <div class="mt-6">
      <MudProgressLinear Color="Color.Warning" Size="Size.Large" Value="10" />
    </div>
    <div class="mt-6 d-flex justify-center">
      <MudButton Variant="Variant.Filled" Color="Color.Primary">
        <img width="40" src="/images/cardano-logo-small.svg" alt="cardano-button-logo" class="mr-4" />
        <MudText Typo="Typo.h5">BURN MY $ADA</MudText>
      </MudButton>
    </div>
  </MudPaper>

  <div class="mx-auto ma-2 mt-6">
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Centered="true">
      <MudTabPanel Text="🔥 RECENT BURNS">
        <MudText>Content One</MudText>
      </MudTabPanel>
      <MudTabPanel Text="🪙 TOKENS">
        <MudText>Content Two</MudText>
      </MudTabPanel>
      <MudTabPanel Text="📈 LEADERBOARD">
        <MudText>Content Two</MudText>
      </MudTabPanel>
    </MudTabs>
  </div>
</MudContainer>